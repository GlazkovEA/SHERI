<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/photo_layout_height"
    android:background="@android:color/transparent"
    android:layout_height="@dimen/photo_layout_height">

    <ImageView android:id="@+id/image"
        android:clickable="true"
        android:layout_width="@dimen/photo_layout_width"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/photo_layout_height"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:focusable="true"
        android:contentDescription="TODO"/>

    <ImageButton
        android:layout_width="@dimen/cross"
        android:layout_height="@dimen/cross"
        android:id="@+id/close_btn"
        android:layout_margin="@dimen/low_middle_margin"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:src="@drawable/cross"
        />

</RelativeLayout>