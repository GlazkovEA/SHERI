<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/height_middle_margin"
    android:layout_marginLeft="@dimen/middle_margin"
    android:layout_marginRight="@dimen/middle_margin"
    android:layout_marginTop="@dimen/larger_margin"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.homounikumus1.sheri.drawer_fragments.MyMarksFragment">

    <Button
        android:id="@+id/first_btn"
        android:layout_width="wrap_content"
        android:padding="@dimen/height_middle_padding"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/middle_margin"
        android:layout_marginEnd="@dimen/middle_margin"
        android:layout_marginTop="@dimen/larger_margin"
        android:layout_centerInParent="true"
        android:fontFamily="@font/open_sans_light"
        android:background="@drawable/btn_add"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_large_plus"
        android:text="@string/mark_dish" />


    <ListView
        android:id="@+id/items"
        android:layout_above="@+id/addBtn"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"></ListView>

    <Button
        android:id="@+id/addBtn"
        android:layout_marginBottom="@dimen/middle_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_add"
        android:clickable="true"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:letterSpacing="@dimen/font_largest_spacing"
        android:paddingBottom="@dimen/low_middle_padding_plus"
        android:layout_marginStart="@dimen/middle_margin"
        android:layout_marginEnd="@dimen/middle_margin"
        android:paddingTop="@dimen/low_middle_padding_plus"
        android:src="@mipmap/bg"
        android:text="@string/add"
        android:textColor="@color/colorBlack"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sort_list"
        style="@style/spinner"
        android:dropDownVerticalOffset="@dimen/spinner_offset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place"
        android:layout_marginEnd="@dimen/spinner_margin_end"
        android:dropDownSelector="@android:color/transparent"
        android:fadeScrollbars="false"
        android:scrollIndicators="top"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="0"
        android:scrollbars="vertical">

    </android.support.v7.widget.AppCompatSpinner>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_lines_height"
        android:id="@+id/line"
        android:layout_marginTop="@dimen/low_middle_margin"
        android:layout_marginStart="@dimen/height_middle_margin"
        android:layout_marginEnd="@dimen/height_middle_margin"
        android:layout_below="@+id/sort_list"
        android:background="@color/colorOrange"
        />

    <TextView
        android:layout_width="match_parent"
        android:fontFamily="@font/open_sans"
        android:layout_marginTop="@dimen/height_middle_margin"
        android:textSize="@dimen/font_small"
        android:layout_marginBottom="@dimen/low_middle_margin"
        android:layout_marginStart="@dimen/height_middle_margin"
        android:letterSpacing="@dimen/font_large_spacing"
        android:id="@+id/place"
        android:textColor="@color/colorGrey"
        android:text="@string/place"
        android:layout_height="wrap_content" />




</RelativeLayout>
